{
    "manifest_version": 3,
    "name": "Copy Math",
    "description": "Copy (almost) any math",
    "version": "1.0.0",
    "action": {
    },
    "background": {
        "scripts": ["./src/$private$/KEY.ts", "./src/$runtime$/menu.ts", "./src/$runtime$/capture.ts", "./src/$runtime$/api.ts", "./src/$runtime$/index.ts", "./src/$utils$/core.ts", "./src/$utils$/state.ts"],
        "service_worker": "./src/$runtime$/index.ts",
        "type": "module"
    },
    "icons": {
        "512": "assets/512x.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "scripting",
        "background",
        "clipboardWrite",
        "clipboardRead",
        "contextMenus",
        "nativeMessaging",
        "tabCapture",
        "downloads"
    ],
    "host_permissions": ["<all_urls>"],
    "content_scripts": [{
        "type": "module",
        "matches": ["<all_urls>"],
        "js": ["./src/$content$/index.ts"]
    }]
}
